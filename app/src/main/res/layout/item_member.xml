<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutContactItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

      <Button
          android:id="@+id/btKick"
          style="@style/Widget.App.Button.TonalButton.IconOnly"
          android:layout_width="38dp"
          android:layout_height="38dp"
          android:backgroundTint="@color/white"
          android:paddingLeft="8dp"
          android:visibility="gone"
          app:icon="@drawable/ic_delete_remove_uncheck_svgrepo_com"
          app:iconSize="22dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.5" />

      <Button
          android:id="@+id/btUp"
          style="@style/Widget.App.Button.TonalButton.IconOnly"
          android:layout_width="38dp"
          android:layout_height="38dp"
          android:layout_marginEnd="10dp"
          android:backgroundTint="@color/white"
          android:paddingLeft="8dp"
          android:visibility="gone"
          app:icon="@drawable/ic_accept_check_good_mark_ok_tick_svgrepo_com"
          app:iconSize="16dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toStartOf="@+id/btKick"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.5" />

      <Button
          android:id="@+id/btDown"
          style="@style/Widget.App.Button.TonalButton.IconOnly"
          android:layout_width="38dp"
          android:layout_height="38dp"
          android:layout_marginEnd="10dp"
          android:backgroundTint="@color/white"
          android:paddingLeft="8dp"
          android:visibility="gone"
          app:icon="@drawable/ic_reply_black_svgrepo_com"
          app:iconSize="16dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toStartOf="@+id/btUp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.5" />

      <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/itAvatar"
          android:layout_width="55dp"
          android:layout_height="55dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/itName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="10dp"
          android:textColor="@color/black"
          android:textSize="15dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toEndOf="@+id/itAvatar"
          app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.cardview.widget.CardView>

</LinearLayout>
